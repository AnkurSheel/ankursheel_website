{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost on Firefox",
            "url": "http://localhost:8000/",
            "webRoot": "${workspaceFolder}",
            "firefoxExecutable": "D:\\Software\\Firefox Developer Edition\\firefox.exe"
        },
        {
            "name": "Gatsby develop",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/node_modules/gatsby/dist/bin/gatsby",
            "args": ["develop"],
            "stopOnEntry": false,
            "runtimeArgs": ["--nolazy"],
            "sourceMaps": false
        },
        {
            "name": "Gatsby build",
            "type": "node",
            "request": "launch",
            "protocol": "inspector",
            "program": "${workspaceRoot}/node_modules/gatsby/dist/bin/gatsby",
            "args": ["build"],
            "stopOnEntry": false,
            "runtimeArgs": ["--nolazy"],
            "sourceMaps": false
        },
        {
            "name": "Launch localhost on Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/wwwroot",
            "runtimeArgs": [
                // this is version dependent
                "--load-extension=${env:userprofile}/AppData/Local/Google/Chrome/User Data/Default/Extensions/fmkadmapgofadopljbjfkapdkoienihi/4.0.6_0"
            ],
            "sourceMaps": true,
            "trace": true
        }
    ]
}
